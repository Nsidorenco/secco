root = exp

<exp> = exp 
      | OpExp
      | VarExp
      | IFEXP
      | AssignExp
      | SeqExp
      | WhileExp
      | INT
      | Comment

OpExp = exp OPER exp (* TODO: fix precedens *)

VarExp = ID
<ID> = #'[a-zA-Z]+[a-zA-Z0-9_]*'

IFEXP = <'if'> exp <'then'> exp <'else'> exp

AssignExp = VarExp <':='> exp

SeqExp = <'('> exp OptExp <')'>
<OptExp> = <';'> exp OptExp | eps (* broken *)

ParenExp = <'('> OptParenExp <')'>
<OptParenExp> = exp | eps

WhileExp = <'while'> test <'do'> body
<test> = exp
<body> = exp

<Comment> = <'%'> <text> <'%'> exp

text = #'[^%]*'

OPER = '*' | '+' | '-' | '=' | '!=' | '<' | '>' | '<=' | '>='
INT = digits
<digits> = #'[0-9]+'
